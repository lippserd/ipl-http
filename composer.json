{
  "name": "ipl/http",
  "type": "library",
  "description": "Icinga PHP Library - HTTP",
  "keywords": [
    "http",
    "psr-7"
  ],
  "require": {
    "php": ">=5.6.0",
    "psr/http-message": "~1.0",
    "ext-curl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7 || ^4.8",
    "squizlabs/php_codesniffer": "^2.9.1"
  },
  "autoload": {
    "psr-4": {
      "ipl\\Http\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ipl\\Tests\\Http\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit --no-coverage",
    "test-dev": "vendor/bin/phpunit",
    "checkstyle": "vendor/bin/phpcs"
  }
}
